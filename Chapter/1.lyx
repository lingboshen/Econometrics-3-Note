\begin_layout Standard
It is clear that the estimates 
\begin_inset Formula $\hat{\text{\alpha}_{T}}$
\end_inset

 and 
\begin_inset Formula $\hat{\rho}$
\end_inset

 have different rates of convergence.
 A scaling matrix 
\begin_inset Formula $Y_{T}$
\end_inset

 is helpful in describing limiting distributions.
 
\begin_inset Formula 
\begin{eqnarray*}
Y_{T}\left[\begin{array}{c}
\hat{\text{\alpha}_{T}}\\
\hat{\rho}_{T}-1
\end{array}\right] & = & Y_{T}\left[\begin{array}{cc}
T & \sum y_{t-1}\\
\sum y_{t-1} & \sum y_{t-1}^{2}
\end{array}\right]^{-1}\left[\begin{array}{c}
\sum u_{t}\\
\sum y_{t-1}u_{t}
\end{array}\right]\\
 & = & Y_{T}\left[\begin{array}{cc}
T & \sum y_{t-1}\\
\sum y_{t-1} & \sum y_{t-1}^{2}
\end{array}\right]^{-1}Y_{T}Y_{T}^{-1}\left[\begin{array}{c}
\sum u_{t}\\
\sum y_{t-1}u_{t}
\end{array}\right]\\
 & = & \left\{ Y_{T}^{-1}\left[\begin{array}{cc}
T & \sum y_{t-1}\\
\sum y_{t-1} & \sum y_{t-1}^{2}
\end{array}\right]Y_{T}^{-1}\right\} ^{-1}\left\{ Y_{T}^{-1}\left[\begin{array}{c}
\sum u_{t}\\
\sum y_{t-1}u_{t}
\end{array}\right]\right\} \\
 & = & \left\{ Y_{T}^{-1}\left[\begin{array}{cc}
T & \sum y_{t-1}\\
\sum y_{t-1} & \sum y_{t-1}^{2}
\end{array}\right]Y_{T}^{-1}\right\} ^{-1}\left\{ Y_{T}^{-1}\left[\begin{array}{c}
\sum u_{t}\\
\sum y_{t-1}u_{t}
\end{array}\right]\right\} \\
 & = & \left\{ \left[\begin{array}{cc}
T^{-1/2} & 0\\
0 & T^{-1}
\end{array}\right]\left[\begin{array}{cc}
T & \sum y_{t-1}\\
\sum y_{t-1} & \sum y_{t-1}^{2}
\end{array}\right]\left[\begin{array}{cc}
T^{-1/2} & 0\\
0 & T^{-1}
\end{array}\right]\right\} ^{-1}\\
 &  & \times\left\{ \left[\begin{array}{cc}
T^{-1/2} & 0\\
0 & T^{-1}
\end{array}\right]\left[\begin{array}{c}
\sum u_{t}\\
\sum y_{t-1}u_{t}
\end{array}\right]\right\} \\
\left[\begin{array}{c}
T^{1/2}\hat{\text{\alpha}_{T}}\\
T\left(\hat{\rho}_{T}-1\right)
\end{array}\right] & = & \left[\begin{array}{cc}
1 & T^{-3/2}\sum y_{t-1}\\
T^{-3/2}\sum y_{t-1} & T`^{-2}\sum y_{t-1}^{2}
\end{array}\right]^{-1}\left[\begin{array}{c}
T^{-1/2}\sum u_{t}\\
T^{-1}\sum y_{t-1}u_{t}
\end{array}\right]\\
 & with\\
\left[\begin{array}{cc}
1 & T^{-3/2}\sum y_{t-1}\\
T^{-3/2}\sum y_{t-1} & T`^{-2}\sum y_{t-1}^{2}
\end{array}\right] & \xrightarrow{L} & \left[\begin{array}{cc}
1 & \sigma\int W(r)dr\\
\sigma\int W(r)dr & \sigma^{2}\int W(r)^{2}dr
\end{array}\right]\\
 & = & \left[\begin{array}{cc}
1 & 0\\
0 & \sigma
\end{array}\right]\left[\begin{array}{cc}
1 & \int W(r)dr\\
\int W(r)dr & \int W(r)^{2}dr
\end{array}\right]\left[\begin{array}{cc}
1 & 0\\
0 & \sigma
\end{array}\right]\\
\left[\begin{array}{c}
T^{-1/2}\sum u_{t}\\
T^{-1}\sum y_{t-1}u_{t}
\end{array}\right] & \xrightarrow{L} & \left[\begin{array}{c}
\sigma W(1)\\
\frac{1}{2}\sigma^{2}\left[W(1)^{2}-1\right]
\end{array}\right]\\
 & = & \sigma\left[\begin{array}{cc}
1 & 0\\
0 & \sigma
\end{array}\right]\left[\begin{array}{c}
W(1)\\
\frac{1}{2}\left[W(1)^{2}-1\right]
\end{array}\right]\\
 & \Longrightarrow\\
\left[\begin{array}{c}
T^{1/2}\hat{\text{\alpha}_{T}}\\
T\left(\hat{\rho}_{T}-1\right)
\end{array}\right] & \xrightarrow{L} & \left[\begin{array}{cc}
1 & 0\\
0 & \sigma
\end{array}\right]^{-1}\left[\begin{array}{cc}
1 & \int W(r)dr\\
\int W(r)dr & \int W(r)^{2}dr
\end{array}\right]^{-1}\left[\begin{array}{cc}
1 & 0\\
0 & \sigma
\end{array}\right]^{-1}\\
 &  & \times\sigma\left[\begin{array}{cc}
1 & 0\\
0 & \sigma
\end{array}\right]\left[\begin{array}{c}
W(1)\\
\frac{1}{2}\left[W(1)^{2}-1\right]
\end{array}\right]\\
 & = & \sigma\left[\begin{array}{cc}
1 & 0\\
0 & \sigma
\end{array}\right]^{-1}\left[\begin{array}{cc}
1 & \int W(r)dr\\
\int W(r)dr & \int W(r)^{2}dr
\end{array}\right]^{-1}\left[\begin{array}{c}
W(1)\\
\frac{1}{2}\left[W(1)^{2}-1\right]
\end{array}\right]\\
 & = & \left[\begin{array}{cc}
\sigma & 0\\
0 & 1
\end{array}\right]\left[\begin{array}{cc}
1 & \int W(r)dr\\
\int W(r)dr & \int W(r)^{2}dr
\end{array}\right]^{-1}\left[\begin{array}{c}
W(1)\\
\frac{1}{2}\left[W(1)^{2}-1\right]
\end{array}\right]\\
 & = & \Delta^{-1}\left[\begin{array}{cc}
\sigma & 0\\
0 & 1
\end{array}\right]\left[\begin{array}{cc}
\int W(r)^{2}dr & -\int W(r)dr\\
-\int W(r)dr & 1
\end{array}\right]\left[\begin{array}{c}
W(1)\\
\frac{1}{2}\left[W(1)^{2}-1\right]
\end{array}\right]\\
 & with\\
\Delta & = & \int W(r)^{2}dr-\left[\int W(r)dr\right]^{2}
\end{eqnarray*}

\end_inset


